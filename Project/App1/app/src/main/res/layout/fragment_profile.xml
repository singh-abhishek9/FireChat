<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:orientation="vertical">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<ImageView
    android:layout_width="match_parent"
    android:scaleType="fitXY"
    android:layout_height="730dp"
    android:src="@drawable/y5"
    android:id="@+id/img_background"
    ></ImageView>
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:layout_marginLeft="135dp"
    android:layout_marginTop="20dp"
    android:src="@drawable/yy2"
    app:civ_border_color="@color/purple"
    app:civ_border_width="4dp"
    android:id="@+id/img_profile"
    ></de.hdodenhof.circleimageview.CircleImageView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="32dp"
        android:layout_height="45dp"
        android:src="@drawable/a2"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="210dp"
        app:civ_circle_background_color="@color/white"
        android:id="@+id/img_edt"
        ></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="130dp"
        android:textSize="35dp"
        android:text="Hi,Yash"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="@color/purple"
        android:id="@+id/txt_pname"
        android:layout_marginBottom="5dp"
        ></TextView>
    <TextView
        android:layout_width="500dp"
        android:layout_height="110dp"
        android:text="Quote of the day"
        android:background="@drawable/quoteofday"
        android:layout_below="@+id/txt_pname"
        android:paddingLeft="40dp"
        android:textSize="22dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="30dp"
        android:id="@+id/txt2"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“The miracle is not that we do this work, but that we are happy to do it.”"
        android:layout_below="@+id/txt_pname"
        android:paddingTop="45dp"
        android:textSize="16dp"
        android:fontFamily="serif"
        android:layout_marginLeft="105dp"
        android:paddingRight="30dp"
        android:textColor="@color/white"
        android:id="@+id/txt_about"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:layout_marginLeft="88dp"
        android:textSize="29dp"
        android:text="Account Info"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:id="@+id/txtw"
        ></TextView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/baseline_edit_24"
        android:layout_below="@+id/txt2"
        android:layout_toRightOf="@+id/txtw"
        android:layout_marginTop="16dp"
        android:paddingLeft="5dp"
        android:id="@+id/img_edit"
        app:civ_border_width="2dp"
        ></de.hdodenhof.circleimageview.CircleImageView>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:src="@drawable/name1"
        android:layout_below="@+id/txtw"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:id="@+id/img_name"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtw"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:id="@+id/txt_name"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtw"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="45dp"
        android:text="Yash Tiwari"
        android:textColor="@color/black_1"
        android:id="@+id/txt_cname"
        ></TextView>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:src="@drawable/mobile"
        android:layout_below="@+id/img_name"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:id="@+id/img_mobile"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="21dp"
        android:text="Mobile No."
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:id="@+id/txt_mobile"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_mobile"
        android:layout_marginLeft="140dp"
        android:text="8601973650"
        android:textColor="@color/black_1"
        android:id="@+id/txt_cmobile"
        ></TextView>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:src="@drawable/email1"
        android:layout_below="@+id/img_mobile"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:id="@+id/img_email"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_mobile"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="21dp"
        android:text="Email"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:id="@+id/txt_email"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_email"
        android:layout_marginLeft="140dp"
        android:text="yashlmp2003@gmail.com"
        android:textColor="@color/black_1"
        android:id="@+id/txt_cemail"
        ></TextView>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:src="@drawable/password1"
        android:layout_below="@+id/img_email"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:id="@+id/img_address"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_email"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="21dp"
        android:text="Password"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:id="@+id/txt_address"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_address"
        android:layout_marginLeft="140dp"
        android:text="******"
        android:textColor="@color/black_1"
        android:id="@+id/txt_cpassword"
        ></TextView>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:src="@drawable/date"
        android:layout_below="@+id/img_address"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:id="@+id/img_dob"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_address"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="21dp"
        android:text="D.O.B"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:id="@+id/txt_dob"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_dob"
        android:layout_marginLeft="140dp"
        android:text="21-03-2003"
        android:textColor="@color/black_1"
        android:id="@+id/txt_cdob"
        ></TextView>
    <ImageView
        android:layout_width="65dp"
        android:layout_height="38dp"
        android:src="@drawable/exit"
        android:layout_below="@id/txt_dob"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/txt_dob"
        android:layout_marginLeft="100dp"
        android:id="@+id/img_logout1"
        ></ImageView>
</RelativeLayout>
</ScrollView>
</FrameLayout>